// Comprobar que se pueda usar la traza:
// trigger -> 1 -> trigger -> 0 -> trigger -> 1 -> trigger -> 0 ...

const N = 2
range T = 0..N-1

BIESTABLE = (trigger -> uno -> BIN[0]
			|trigger -> zero -> BIN[1]
			),
BIN[b:T] = (when (b==0) trigger -> ZERO
		   |when (b==1) trigger -> UNO
	  	   ),
ZERO = (zero -> BIN[1]),
UNO = (uno -> BIN[0]).
